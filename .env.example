# ==============================================
# CURSOR GRAPHRAG MEMORY - ENVIRONMENT CONFIG  
# ==============================================

# ==================
# API KEYS (Required)
# ==================
GEMINI_API_KEY=your_gemini_api_key_here
# Get from: https://makersuite.google.com/app/apikey

# ==================
# DATABASE CONFIG
# ==================
# For Production (Railway auto-generates)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# For Development (Local PostgreSQL)
DEV_DATABASE_URL=postgresql://localhost:5432/cursor_graphrag_dev

# ==================
# REDIS CONFIG (Optional)
# ==================
REDIS_URL=redis://localhost:6379/0
DEV_REDIS_URL=redis://localhost:6379/1

# ==================
# PROJECT SETTINGS
# ==================
PROJECT_NAME=cursor_graphrag_memory
ENVIRONMENT=production
LOG_LEVEL=INFO

# ==================
# MCP SERVER CONFIG
# ==================
MCP_SERVER_PORT=8000
MCP_SERVER_HOST=0.0.0.0

# ==================
# DATABASE POOL SETTINGS
# ==================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ==================
# DEVELOPMENT FLAGS
# ==================
# Set to true to use mock services instead of real APIs
USE_MOCK_SERVICES=false
MOCK_GEMINI_RESPONSES=false
MOCK_DATABASE=false

# ==================
# TESTING CONFIG
# ==================
TEST_DATABASE_URL=postgresql://localhost:5432/cursor_graphrag_test
TEST_REDIS_URL=redis://localhost:6379/2 